<Window x:Class="AdGroupSearch.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdGroupSearch"
        xmlns:vm="clr-namespace:AdGroupSearch.ViewModels"
        xmlns:converters="clr-namespace:AdGroupSearch.Converters"
        mc:Ignorable="d"
        Title="AD Group Search" Height="600" Width="350">
    <Window.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolVisibilityConverter"/>
    </Window.Resources>
    
    <Window.DataContext>
        <vm:MainWindowModel/>
    </Window.DataContext>
    
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBox x:Name="FilterTextBox" Text="{Binding FilterText, UpdateSourceTrigger=PropertyChanged}"/>

        <ListView x:Name="GroupsListView" ItemsSource="{Binding Groups}" Grid.Row="1" Margin="0,5,0,0">
            
        </ListView>

        <Border Visibility="{Binding IsLoadingGroups, Converter={StaticResource BoolVisibilityConverter}}" Padding="0,5" Grid.Row="2" Margin="0,5,0,0">
            <Border.Background>
                <SolidColorBrush Color="Yellow" Opacity=".5"/>
            </Border.Background>

            <TextBlock TextAlignment="Center" FontSize="15">UPDATING GROUP CACHE</TextBlock>
        </Border>
    </Grid>
</Window>
